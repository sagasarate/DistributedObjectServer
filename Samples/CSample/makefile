WORKDIR = `pwd`
MODEL_NAME = CSample

CC = gcc
CXX = g++
AR = ar
LD = g++
WINDRES = windres

INC = 
CFLAGS = -std=c++20 -W -fPIC -fvisibility=hidden -MMD -Winvalid-pch
RESINC = 
LIBDIR = 
LIB = -lpthread -lrt
LDFLAGS = -static-libgcc -static-libstdc++ -rdynamic

INC_DEBUG = $(INC)
CFLAGS_DEBUG = $(CFLAGS) -g -O0 -D_DEBUG
RESINC_DEBUG = $(RESINC)
RCFLAGS_DEBUG = $(RCFLAGS)
LIBDIR_DEBUG = $(LIBDIR)
LIB_DEBUG = ../../../Libs/Bin/UtilsD.a $(LIB) 
LDFLAGS_DEBUG = $(LDFLAGS)
OBJDIR_DEBUG = linux/debug
DEP_DEBUG = 
OUT_DEBUG = ../../Work/$(MODEL_NAME)D.so

INC_RELEASE = $(INC)
CFLAGS_RELEASE = $(CFLAGS) -g
RESINC_RELEASE = $(RESINC)
RCFLAGS_RELEASE = $(RCFLAGS)
LIBDIR_RELEASE = $(LIBDIR)
LIB_RELEASE = ../../../Libs/Bin/Utils.a $(LIB) 
LDFLAGS_RELEASE = $(LDFLAGS)
OBJDIR_RELEASE = linux/release
DEP_RELEASE = 
OUT_RELEASE = ../../Work/$(MODEL_NAME).so

SRCS = $(wildcard *.cpp) $(wildcard Protocol/*.cpp)
OBJS = $(patsubst %cpp,%o,$(SRCS))

OBJ_DEBUG = $(foreach n,$(OBJS),$(OBJDIR_DEBUG)/$(n))
OBJ_RELEASE = $(foreach n,$(OBJS),$(OBJDIR_RELEASE)/$(n))

all: debug release

clean: clean_debug clean_release

before_debug: 
	test -d ../../Work || mkdir -p ../../Work
	test -d $(OBJDIR_DEBUG) || mkdir -p $(OBJDIR_DEBUG)
	test -d $(OBJDIR_DEBUG)/Protocol || mkdir -p $(OBJDIR_DEBUG)/Protocol

after_debug: 

debug: before_debug out_debug after_debug

out_debug: before_debug $(OBJ_DEBUG) $(DEP_DEBUG)
	$(LD) -shared $(LIBDIR_DEBUG) $(OBJ_DEBUG)  -o $(OUT_DEBUG) $(LDFLAGS_DEBUG) $(LIB_DEBUG)

pch.h.gch: pch.h
	$(CXX) $(CFLAGS_DEBUG) $(INC_DEBUG) -c $<

$(OBJ_DEBUG): $(OBJDIR_DEBUG)/%.o : %.cpp pch.h.gch
	$(CXX) $(CFLAGS_DEBUG) $(INC_DEBUG) -c -o $@ $<

clean_debug:
	@-rm -f pch.h.gch
	@-rm -f $(OBJ_DEBUG) $(OUT_DEBUG)
	@-rm -rf $(OBJDIR_DEBUG)

before_release: 
	test -d ../../Work || mkdir -p ../../Work
	test -d $(OBJDIR_RELEASE) || mkdir -p $(OBJDIR_RELEASE)
	test -d $(OBJDIR_RELEASE)/Protocol || mkdir -p $(OBJDIR_RELEASE)/Protocol

after_release: 

release: before_release out_release after_release

out_release: before_release $(OBJ_RELEASE) $(DEP_RELEASE)
	$(LD) -shared $(LIBDIR_RELEASE) $(OBJ_RELEASE)  -o $(OUT_RELEASE) $(LDFLAGS_RELEASE) $(LIB_RELEASE)

pch.h.gch: pch.h
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c $<

$(OBJ_RELEASE): $(OBJDIR_RELEASE)/%.o : %.cpp pch.h.gch
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c -o $@ $<

clean_release: 
	@-rm -f pch.h.gch
	@-rm -f $(OBJ_RELEASE) $(OUT_RELEASE)
	@-rm -rf $(OBJDIR_RELEASE)	

-include $(wildcard $(OBJDIR_DEBUG)/.dep.*)
-include $(wildcard $(OBJDIR_RELEASE)/.dep.*)

.PHONY: before_debug after_debug clean_debug before_release after_release clean_release

